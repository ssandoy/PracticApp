<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ssandoy.s236305_mappe3.PlanActivity"
    android:background="#EFEFF4">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/frameLayout4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HENDELSE"
            android:id="@+id/tvName"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="15dp"
            android:textSize="18dp"
            android:singleLine="false" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="avbryt"
            android:id="@+id/cancelButton"
            android:layout_gravity="left|top"
            android:background="@null"
            android:textColor="#FF3836"
            android:textSize="18dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lagre"
            android:id="@+id/saveButton"
            android:layout_gravity="right|top"
            android:background="@null"
            android:textColor="#FF3836"
            android:textSize="18dp" />
    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/frameLayout4"
        android:layout_centerHorizontal="true"
        android:weightSum="1"
        android:layout_marginTop="20dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleText"
            android:hint="Tittel"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:layout_marginTop="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dato"
                android:id="@+id/textView8"
                android:layout_gravity="left|center_vertical"
                android:textSize="20dp"
                android:textColor="#000000"
                android:paddingLeft="3dp" />

            <Button
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:text="DATO"
                android:id="@+id/dateButton"
                android:background="@null"
                android:textAlignment="textEnd"
                android:textStyle="bold"
                android:paddingRight="5dp"
                android:textSize="16dp"
                android:textColor="#587498" />

        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/F"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Starttid"
                android:id="@+id/textView5"
                android:layout_gravity="left|center_vertical"
                android:textSize="20dp"
                android:textColor="#000000"
                android:paddingLeft="3dp" />

            <Button
                android:layout_width="292dp"
                android:layout_height="match_parent"
                android:text="DATE + TIME"
                android:id="@+id/startTimeButton"
                android:textAlignment="textEnd"
                android:background="@null"
                android:paddingRight="11dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="#587498" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sluttid"
                android:id="@+id/textView6"
                android:layout_gravity="left|center_vertical"
                android:textSize="20dp"
                android:textColor="#000000"
                android:paddingLeft="3dp" />

            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="DATE + TIME"
                android:id="@+id/endTimeButton"
                android:textAlignment="textEnd"
                android:background="@null"
                android:paddingRight="20dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="#587498" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Varsel"
                android:id="@+id/textView7"
                android:layout_gravity="left|center_vertical"
                android:textSize="20dp"
                android:textColor="#000000"
                android:paddingLeft="3dp" />

            <Button
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:text="NÃ¥r hendelsen starter"
                android:id="@+id/alertButton"
                android:textAlignment="textEnd"
                android:background="@null"
                android:paddingRight="20dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="#587498" />
        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SLETT"
            android:id="@+id/deleteButton"
            android:layout_gravity="center_horizontal"
            android:background="@null"
            android:textColor="#FF6666"
            android:textSize="22dp"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>
